{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@/types/*": [
				"src/types/*"
			],
			"@/components/*": [
				"src/components/*"
			],
			"@/core/*": [
				"src/core/*"
			],
			"@/utils/*": [
				"src/utils/*"
			]
		},
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}